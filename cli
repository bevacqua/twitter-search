  consumer_secret: 'pyThIyLFtDtYxaiFAX8KKViYv3sPiweUxwWkpnpLYXVnKomIOB',
  access_token_key: '329661096-ZGq5WNLg2XtPd8qUSP0JjO4v2P3kWnWN0JGtg2ac',
  access_token_secret: '9NLZLO0RKnNCA4qoSo5yY8ZGyybQTBmO7GtkZBoUNCOnD'
